<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="comma.sist.guide.dao.guide-mapper">
	
	<select id="guideInfo" resultType="Guide" parameterType="int">
		select guide_no,guide_subject from guide where guide_no=#{guide_no}
	</select>
	
	<!-- 가이드 글 추가 -->
	<insert id="guideInsert" parameterType="Guide">
		insert into guide(guide_no,guide_subject,guide_loc_intro) 
			values((select NVL(max(guide_no)+1,1) from guide),#{guide_subject},#{guide_loc_intro})
	</insert>
	
	<select id="myAllGudie" parameterType="String" resultType="Wish">
		select wish_no from wish where user_id=#{id}
	</select>
</mapper>

